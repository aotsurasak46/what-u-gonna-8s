@model Account;
@{
	ViewData["Title"] = "Registeration";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
	<link rel="icon" href="https://cdn.discordapp.com/attachments/1095718811665182810/1103235894288330802/logo8_3.png" sizes="32x32" />
	<title>Registeration - WHAT28</title>
</head>

<body>
	<form method="POST" asp-controller="Account" asp-action="Regist">


	<div class="container">

		<div class="register_box">
			<!-- Name page-->
			<h1 class="text-center">Register</h1>

			<!--Email-->
			<div class="form-group">

				<input asp-for="Email" class="form-control" type="text" required="" />
				<label asp-for="Email">Email</label>
				<ion-icon class="icon" name="lock-closed-outline"></ion-icon>

			</div>

			<div class="form-group">
				<input asp-for="PhoneNumber" class="form-control" type="tel" required="" />
				<label asp-for="PhoneNumber">Phone Number</label>
				<ion-icon class="icon" name="lock-closed-outline"></ion-icon>
			</div>

			<!--Username-->
			<div class="form-group">
				<input asp-for="Username" class="form-control" type="text" required="" />
				<label asp-for="Username">Username</label>
				<ion-icon class="icon" name="lock-closed-outline"></ion-icon>

			</div>

			<!--Password-->
			<div class="form-group">
				<input asp-for="Password" class="form-control" type="password" required="" />
				<label asp-for="Password">Password</label>
				<ion-icon class="icon" name="lock-closed-outline"></ion-icon>
			</div>

			<!--Con-password-->
			<div class="form-group">
				<input asp-for="ConfirmPassword" class="form-control" type="password" required="" />
				<label asp-for="ConfirmPassword">Confirm Password</label>
				<ion-icon class="icon" name="lock-closed-outline"></ion-icon>
			</div>



			<!--remeber me / forget password-->
			<div class="errorbox">
				<span asp-validation-for="Email" class="text-danger"></span>
				<span asp-validation-for="Username" class="text-danger"></span>
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				<span asp-validation-summary="ModelOnly" class="text-danger"></span>
			</div>



			<!--bottun Register-->
			<div class="Register">
				<button type="submit" asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary my-2">Register</button>
			</div>

			<div>
				<div class="reg">
					<p>have a account </p>
					<a asp-controller="Account" asp-action="Login">login</a>
				</div>
			</div>
		</div>
	</div>

	<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
	<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

	</form>
</body>

</html>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}