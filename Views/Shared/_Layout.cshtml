<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - what_u_gonna_eat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/what_u_gonna_eat.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/navbar2.css" asp-append-version="true" />
    <script src="~/js/navbar2.js"></script>
    <script src="https://secure.exportkit.com/cdn/js/ek_googlefonts.js"></script>
    <script src="https://code.iconify.design/3/3.1.0/iconify.min.js"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 p-0">
            <div class="container-fluid w-full px-0">
                <div class="topnav w-full py-0" id="myTopnav">
                    <a class="navbar-brand" asp-area="" asp-controller="DeliverPost" asp-action="Index">
                        <img id="logo_brand" src="https://cdn.discordapp.com/attachments/1095718811665182810/1101084749658869880/logo8.png" alt="brand" />
                        <p id="brand">what you gonna 8</p>
                    </a>
                    <a asp-action="Index" asp-controller="DeliverPost" style="padding: 0; margin: 0;">
                        <div id="Deliver" class="navbar-toggler mt-2" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                           aria-expanded="false" aria-label="Toggle navigation" >
                           Deliver
                        </div>
                    </a>
                    <a asp-action="Index" asp-controller="EaterPost" style="padding: 0; margin: 0">
                        <div id="Eater" class="navbar-toggler mt-2" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" asp-action="Index" asp-controller="EaterPost">Eater</div>
                    </a>
                    <div id="logo">
                        <img id="user_img" src="https://cdn.discordapp.com/attachments/975683623804100679/1101101923467276388/userpic.png" alt="user" />
                    </div>
                    <a id="user" class="navbar-toggler">profile</a>
                    <a id="Logout" class="navbar-toggler mt-2" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">logout</a>
                    <a href="javascript:void(0);" style="font-size:25px;" class="icon" onclick="myFunction()">&#9776;</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="mx-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - what_u_gonna_eat - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
